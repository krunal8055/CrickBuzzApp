<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignInFrag"
    android:background="@color/CrickBuzzDefault"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/l1"
            android:textAllCaps="true"/>
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            android:background="@drawable/login_bg"
            android:padding="50dp">
            <EditText
                android:id="@+id/signIn_userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Email"
                android:textColor="@color/CrickBuzzDefault"
                android:textColorHint="@color/CrickBuzzDefault"
                />
            <EditText
                android:id="@+id/signIn_userPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Password"
                android:textColor="@color/CrickBuzzDefault"
                android:textColorHint="@color/CrickBuzzDefault"
                />
            <Button
                android:id="@+id/singin_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:textColor="@android:color/white"
                android:background="@drawable/button_shape"
                android:layout_marginTop="30dp"
                android:textSize="18sp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>